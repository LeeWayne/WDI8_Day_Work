<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Instuctions</th>
    <th>Category</th>
    <th>Published on</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.title %></td>
    <td><%= recipe.instuctions %></td>
    <td><%= recipe.category.try :name %></td>
    <td><%= recipe.published_on %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

